{
    "name": "andalisolutions/package-skeleton-php",
    "description": "A skeleton repository for my packages",
    "keywords": ["php", "skeleton", "package"],
    "license": "MIT",
    "authors": [
        {
            "name": "Andrei Ciungulete",
            "email": "andrei.ciungulete@andali.ro"
        }
    ],
    "require": {
        "php": "^8.1.0"
    },
    "require-dev": {
        "laravel/pint": "^1.4",
        "pestphp/pest": "^2.0.0",
        "phpstan/phpstan": "^1.9.11",
        "rector/rector": "^0.15.7",
        "symfony/var-dumper": "^6.2.3"
    },
    "autoload": {
        "psr-4": {
            "Andali\\SkeletonPhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint -v",
        "refactor": "rector --debug",
        "test:lint": "pint --test -v",
        "test:refactor": "rector --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:types",
            "@test:unit"
        ]
    }
}
